.text{
  font-family: Arial, Helvetica, sans-serif;
  font-size: 35rpx;
  color: rgb(94, 94, 94);
  align-content: center;
  margin: 15rpx 0rpx 15rpx 20rpx;
}
.image{
  text-align: center;
  width: 695rpx;
  border-radius: 10rpx; 
  margin: 5rpx 15rpx 0 15rpx;
  /* background-color: blue; */
}

.content_bar{
  border-radius: 20rpx;
  box-shadow: 1px 1px 10px #dadada;
  margin: 15rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  /* position: fixed;
  top: 0; */
  background-color: white;
}

.reply_bar{
   display: flex;
   align-items: center;
}

.reply_style{
  border-radius: 50rpx;
  position: fixed;
  z-index: 999;
  margin-bottom: 20rpx;
  margin-left: 25rpx;
  margin-right: 20rpx; 
  bottom: 0;
  width: 700rpx;
  height: 70rpx;
  background-color: white;
  box-shadow: 1px 1px 10px #dadada;
 
}

.reply_input{
  padding: 5rpx 5rpx 5rpx 10rpx;
  margin: 7rpx 15rpx 5rpx 15rpx;
  color: rgb(63, 63, 63);
  width: 550rpx;
}

.reply_bto{
  border-top-left-radius: 0;
  border-top-right-radius:50rpx;
  border-bottom-right-radius:50rpx;
  border-bottom-left-radius:0;
  position: fixed;
  z-index: 999;
  margin-bottom: 20rpx;
  margin-left: 600rpx;
  margin-right: 20rpx;
  bottom: 0;
  background-color: rgb(230, 118, 118);
  color: white;
  height: 60rpx;
  width: 125rpx;
  padding: 10rpx 0rpx 0rpx 0rpx;
  text-align: center;
}

.comment_style{
  margin: 10rpx 15rpx 15rpx 15rpx;
  display: flex;
  border-bottom: 2rpx solid rgb(231, 231, 231);
  padding-bottom: 10rpx;
}

.comment_bar{
  margin-bottom: 120rpx;
  /* margin-top: 610rpx; */
  align-items: center;
}

.Head_portrait{
  width: 70rpx;
  height: 70rpx;
  overflow: hidden;
  border-radius: 50%;
  box-shadow: 1px 1px 10px #dadada;
}

.comment_style_text1{
  color: rgb(145, 145, 145);
  margin: 14rpx 0rpx 0rpx 10rpx;
  font-size: 30rpx;
}

.comment_style_text2{
  margin: 10rpx 0rpx 0rpx 10rpx;
  color: rgb(100, 100, 100);
  font-size: 35rpx;
  width: 75%;
}

.nickmane{
  color: rgb(145, 145, 145);
  margin: 0rpx 0rpx 0rpx 20rpx;
  font-size: 30rpx;
}

.publish_time{
  color: rgb(145, 145, 145);
  margin: 0rpx 0rpx 0rpx 20rpx;
  font-size: 25rpx;
}

.userInfo_bar{
  display: flex;
  align-items: center;
  margin-left: 15rpx;
}

.tag{
  padding: 5rpx 10rpx 5rpx 10rpx;
  margin-left: 10rpx;
  border-radius: 12rpx;
  color: rgb(233, 126, 126);
  font-size: 28rpx;
}
