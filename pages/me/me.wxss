.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  box-shadow: 2px 2px 20px #dadada;
}

.userinfo-nickname {
  color: #aaa;
}


.personal_data{
  text-align: center;
  border-radius: 50rpx;
  height: 200rpx;
  width: 660rpx;
  margin: 80rpx 25rpx 25rpx 25rpx;
  padding: 20rpx;
  box-shadow: 2px 2px 20px #dadada;
  background-color: white;
}

.top_img{
  margin-top: -80rpx;
}

.server{
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: space-between;
  font-size: 25rpx;
  margin: 50rpx 10rpx 0rpx 10rpx;
  color: rgb(116, 116, 116);
}

.button_bar{
  display: flex;
  align-items: center;
}

.contact{
  background-color: white;
  border-radius: 50rpx;
  box-shadow: 2px 2px 20px #dadada;
  margin: 5rpx 10rpx 25rpx 25rpx;
  color: rgb(116, 116, 116);
  flex-grow: 1;
}

.notification{
  background-color: white;
  border-radius: 50rpx;
  box-shadow: 2px 2px 20px #dadada;
  margin: 5rpx 25rpx 25rpx 10rpx;
  color: rgb(116, 116, 116);
  flex-grow: 1;
}

.login{
  background-color:rgb(233, 126, 126);
  border-radius: 50rpx;
  box-shadow: 2px 2px 20px #dadada;
  margin: 25rpx;
  color: rgb(255, 255, 255);
}

button::after {
  border: none;
}



/* 列表样式 */
.item-container{
  /* display: flex; */
  padding: 5rpx 5rpx 125rpx 5rpx;
  margin: 5rpx 30rpx 20rpx 30rpx; 
  background-color: white;
  border-radius: 20px;
  box-shadow: 1px 1px 10px #dadada;
  overflow:hidden; 
  border: 5rpx dashed white;
}

.content{
  margin: 15rpx;
}

.title{
  font-family: Arial, Helvetica, sans-serif;
  font-size: 35rpx;
  color: rgb(94, 94, 94);
  
}

.tag{
  padding: 5rpx 10rpx 5rpx 10rpx;
  margin-left: 10rpx;
  border-radius: 12rpx;
  color: rgb(233, 126, 126);
  font-size: 28rpx;
}

.userInfo_bar{
  display: flex;
  align-items: center;
}

.visit_bar{
  margin: 40rpx 0rpx 0rpx 0rpx;
}

.Head_portrait{
  width: 70rpx;
  height: 70rpx;
  overflow: hidden;
  border-radius: 50%;
  box-shadow: 1px 1px 10px #dadada;
}

.nickmane{
  color: rgb(145, 145, 145);
  margin: 0rpx 0rpx 0rpx 20rpx;
  font-size: 30rpx;
}

.gender_1{
  color: rgb(84, 132, 223);
  margin: 0rpx 0rpx 0rpx 10rpx;
  font-size: 25rpx;
  font-weight: bold;
}

.gender_0{
  color: rgb(255, 140, 140);
  margin: 0rpx 0rpx 0rpx 10rpx;
  font-size: 25rpx;
  font-weight: bold;
}

.duiqi{
  display: flex;
  align-items: center;
}

.bottom_bar_bto_view{
  color: rgb(194, 194, 194);
  padding:1rpx 15rpx 0rpx 10rpx;
  margin: 0rpx 0rpx 0rpx 10rpx;
  width: 635rpx;
  font-size: 25rpx;
  position: absolute;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  
}

.publish_time{
  color: rgb(145, 145, 145);
  margin: 0rpx 0rpx 0rpx 20rpx;
  font-size: 25rpx;
}

